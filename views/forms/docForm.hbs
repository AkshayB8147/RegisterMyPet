<div class="container">

    <form action="/register-doc" method="post">
        <!-- Docter Details -->
        <h1>Docter Details</h1>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="docName">Full Name</label>
                <input type="text" class="form-control" id="docName" name="docName" placeholder="Full Name" required>
            </div>
            <div class="form-group col-md-6">
                <label for="docPhone">Phone</label>
                <input type="tel" class="form-control" id="docPhone" name="docPhone" placeholder="Phone">
            </div>
            <div class="form-group col-md-6">
                <label for="docEmail">Email address</label>
                <input type="email" class="form-control" id="docEmail" name="docEmail" placeholder="example@gmail.com">
            </div>

            <div class="form-group col-md-6">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Example@123">
            </div>

            <div class="form-group col-md-6">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="street" placeholder="H.no, Street">
            </div>
            <div class="form-group col-md-3">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="City">
            </div>
            <div class="form-group col-md-3">
                <label for="pincode">Zip</label>
                <input type="number" class="form-control" id="pincode" name="pincode" placeholder="Pincode">
            </div>
            <button class="btn btn-primary" type="submit">Register as Doctor</button>
        </div>
    </form>
    
</div>